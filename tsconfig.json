{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2015",
    "lib": ["es2021", "dom", "DOM.Iterable"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "noEmit": true,
    "useDefineForClassFields": false
  },
  "include": ["**/*.ts"]
}
