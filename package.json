{
  "name": "svg-to-inline",
  "version": "0.0.0-development",
  "description": "Web Component to fetch an external SVG file and use it inline.",
  "homepage": "https://tiagoporto.github.io/svg-to-inline",
  "keywords": [
    "svg",
    "inline",
    "fetch",
    "include",
    "inject",
    "web component",
    "component"
  ],
  "author": {
    "name": "Tiago Porto",
    "url": "http://tiagoporto.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tiagoporto/svg-to-inline.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 20",
    "npm": ">= 10"
  },
  "type": "module",
  "customElements": "custom-elements.json",
  "main": "dist/SvgToInline.js",
  "module": "dist/SvgToInline.js",
  "exports": {
    ".": "./dist/SvgToInline.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.ts",
    "!dist/**/*.test*"
  ],
  "scripts": {
    "prepublishOnly": "rm -rf dist && rm -f tsconfig.build.tsbuildinfo && npm run build",
    "prepare": "husky",
    "analyze": "custom-elements-manifest analyze --litelement --exclude demo dist storybook-static \"**/*.(story|stories).*\"",
    "start": "tsc --project tsconfig.build.json && concurrently -k -r \"tsc --project tsconfig.build.json --watch --preserveWatchOutput\" \"web-dev-server\"",
    "build": "tsc --project tsconfig.build.json && npm run analyze",
    "checks": "npm run check-docs && npm run check-formatting && npm run check-typing && npm run lint",
    "check-docs": "remark --frail .",
    "check-formatting": "prettier --check --ignore-unknown \"**/*\"",
    "formatting:fix": "npm run check-formatting -- --write",
    "check-typing": "tsc --project tsconfig.json",
    "lint": "eslint . --ext js,mjs,ts,html --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "test": "tsc --project tsconfig.build.json && wtr",
    "test:coverage": "tsc --project tsconfig.build.json && wtr --coverage",
    "test:watch": "tsc --project tsconfig.build.json && concurrently -k -r \"tsc --project tsconfig.build.json --watch --preserveWatchOutput\" \"wtr --watch\"",
    "docs": "storybook dev -p 6006",
    "docs:build": "storybook build"
  },
  "dependencies": {
    "lit": "^3.2.1",
    "throttle-debounce": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-controls": "^8.4.2",
    "@storybook/addon-docs": "^8.4.2",
    "@storybook/blocks": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@storybook/web-components": "^8.4.2",
    "@storybook/web-components-vite": "^8.4.2",
    "@tiagoporto/prettier-config": "^1.0.0-alpha.2",
    "@tiagoporto/remark-config": "^1.0.0-alpha.1",
    "@types/mocha": "^10.0.9",
    "@types/throttle-debounce": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.19.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "semantic-release": "^24.2.0",
    "storybook": "^8.4.2",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">=8.0.0"
  }
}
